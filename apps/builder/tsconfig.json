{
  "extends": "tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@assets/*": ["./src/assets/*"]
    },
    "types": [
      "vite/client",
      "vite-plugin-svgr/client",
      "mdx",
      "node",
      "./src/types/environment.d.ts"
    ]
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts",
    "./src/assets/animationForLottie/*.json"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
