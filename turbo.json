{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "ts-check": {
      "dependsOn": ["^ts-check"]
    },
    "preview": {
      "dependsOn": ["build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "build-cloud": {
      "dependsOn": ["build"]
    },
    "build-self": {
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["dev"]
    }
  }
}
